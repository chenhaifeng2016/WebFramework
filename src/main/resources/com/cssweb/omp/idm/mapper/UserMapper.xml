<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cssweb.omp.idm.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.cssweb.omp.idm.pojo.User">
        <id column="UserID" property="userId"/>
        <result column="UserName" property="userName"/>
        <result column="MobilePhone" property="mobilePhone"/>
        <result column="EMail" property="email"/>
        <result column="Password" property="password"/>
        <result column="RealName" property="realName"/>
        <result column="Locked" property="locked"/>
    </resultMap>

    <insert id="insert" parameterType="com.cssweb.omp.idm.pojo.User">
        insert into TUser (RealName, Password, Locked, UserName, MobilePhone, Email) values(#{realName}, #{password}, ${locked}, #{userName}, #{mobilePhone}, #{email})
    </insert>

    <delete id="delete" parameterType="com.cssweb.omp.idm.pojo.User">
        delete from TUser where UserID=${userId}
    </delete>

    <update id="update" parameterType="com.cssweb.omp.idm.pojo.User">
		UPDATE TUser set
		  RealName = #{realName},
		  Password = #{password},
		  Locked = ${locked},
		  UserName = #{userName},
		  MobilePhone = #{mobilePhone},
		  Email = #{email}
		WHERE UserID = ${userId}
    </update>

    <select id="select" parameterType="long" resultType="com.cssweb.omp.idm.pojo.User" >
		SELECT * FROM TUser WHERE UserID=${value}
   </select>

    <select id="selectAll"   resultMap="userResultMap" >
        SELECT * FROM TUser
    </select>


    <select id="getTotalRecords" resultType="long" >
        SELECT count(UserID) FROM TUser
    </select>


    <select id="getPage" parameterType="map" resultMap="userResultMap">
        select * from TUser
           <if test="id != null">
              where userId=${id}
           </if>
        <if test="field != null">
          order by ${field} <!--注意这里不能用#,因类#号会自动加引号当成字符串来对待-->
        </if>
        <if test="direction != null">
            ${direction}
        </if>
        limit ${startPos},${pageSize}
    </select>


    <select id="login"  parameterType="HashMap" resultMap="userResultMap" >
		SELECT * from TUser WHERE username = #{userName} and password = #{password}
    </select>

</mapper>
